{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "..\\Api\\bin\\Debug\\net6.0\\logs\\log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "apiInstanceSettings": {
    "IdConfiguration": 0
  },
  "apiConfiguration": {
    "commentsUrl": "https://jsonplaceholder.typicode.com/comments",
    "recipesUrl": "https://dummyjson.com/recipes",
    "weatherUrl": "https://open-weather13.p.rapidapi.com/city?city=athens&lang=EN"
  },
  "statisticsPerformanceConfigurationJob": {
    "minutesToCalculate": 5,
    "thresholdMultiplier": 1.5,
    "cronExpression": "0 */1 * * * ?"
  },
  "cacheSettings": {
    "absoluteExpiration": 10,
    "slidingExpiration": 5
  },
  "connectionStrings": {
    "employees": "Data Source=employees.db"
  },
  "AllowedHosts": "*"
}
